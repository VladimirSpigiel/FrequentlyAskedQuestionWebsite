{% if article|length >0 %}
    {% if(article.actif==1) %}
    <article class="well col-sm-10 col-sm-offset-1">
        <header>
            <h4>{{ article.titre }}</h4>
            <p class="text-muted">Publié le {{ article.date|date('d-m-Y') }}</p>
        </header>
        <div class="text-left">
            <p>{{ article.contenu|raw }}</p>
        </div>
        <footer class="text-muted">
            Auteur : {{ article.auteur }}
        </footer>
    </article>
    <div class="well col-sm-10 col-sm-offset-1 h4">
        Cet article vous a été utile ?<br><br>
        <a class="btn btn-success" href="{{ path('allotools_faq_feedback_article', {'id' : article.id, 'bool': "true"}) }}">Oui</a>
        -
        <a class="btn btn-danger" href="{{ path('allotools_faq_feedback_article', {'id' : article.id, 'bool': 'false'}) }}">Non</a>
    </div>
     {% else %}
        <p>cette article n'ai pas disponible</p>
     {%  endif %}
{% else %}
    <div class="well col-sm-10 col-sm-offset-1 h4">
        Article introuvable !
    </div>
{% endif %}
