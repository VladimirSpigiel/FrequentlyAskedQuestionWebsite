{% extends "AllotoolsFaqBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}"/>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
{% endblock %}

{% block general %}

    {% block fos_user_content %}
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-left">
                <div class="form-group">
                    <label for="username">{{ 'profile.show.username'|trans }}</label>
                    <input id="username" class="form-control" disabled type="text" value="{{ user.username }}">
                </div>
                <div class="form-group">
                    <label for="email">{{ 'profile.show.email'|trans }}</label>
                    <input id="email" class="form-control" disabled type="text" value="{{ user.email }}">
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}
